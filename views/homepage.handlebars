<h1 class="title">Tech blog Homepage</h1>

{{#each posts as |post|}}
  <a href="/post/{{post.id}}" class="clickable-link">
    <div class="postDiv">

      <div class="postID">
        {{post.id}}.<br>
        {{post.user.user_username}}
        <div class="created_at">

        {{created_at}}.
        </div>
      </div>
<div class="post_Title">
        {{post.title}}<br>
</div>

      <div class="postContent">
        {{post.post}}<br>
        
      </div>

    </div>
  </a>
  <br />

{{/each}}